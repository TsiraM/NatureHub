@* Set the page title *@
@{
    ViewData["Title"] = "Home Page";
}

@* Main content wrapper *@
<div class="content-wrapper">
    @* Header section with title and create button *@
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="section-title">Discussion</h2>
        <a asp-action="Create" class="btn btn-primary">New Discussion</a>
    </div>

    @* Discussion cards grid *@
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="discussion-card">
                    <div class="row p-3 align-items-start">
                        @* Discussion image section *@
                        <div class="col-md-2">
                            @if (!string.IsNullOrEmpty(item.ImageFilename))
                            {
                                <img src="~/images/@item.ImageFilename" class="discussion-image" alt="Discussion Image" />
                            }
                        </div>
                        @* Discussion details section *@
                        <div class="col-md-10">
                            <h4><a href="@Url.Action("GetDiscussion", new { id = item.DiscussionId })">@item.Title</a></h4>
                            <div class="mt-2">
                                <span class="badge bg-primary">@item.Comments.Count Comments</span>
                                <span class="text-muted ml-3">@item.CreateDate.ToString("MMM dd, yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
