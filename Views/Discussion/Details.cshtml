@model NatureHub.Models.Discussion

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Discussion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageFilename))
            {
                <img src="@Url.Content("~/images/" + Model.ImageFilename)" alt="Discussion Image" class="img-fluid rounded" style="max-width: 500px; height: auto;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
</div>

<!-- Comments Section -->
<div>
    <h3>Comments</h3>
    @if (Model.Comments != null && Model.Comments.Any())
    {
        @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreateDate))
        {
            <div class="card mb-2">
                <div class="card-body">
                    <p class="text-muted"><strong>@comment.CreateDate.ToString("MMM dd, yyyy hh:mm tt")</strong></p>
                    <p>@comment.Content</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No comments yet. Be the first to comment!</p>
    }
</div>

<!-- Add New Comment Form -->
<div class="mt-4">
    <h4>Add a Comment</h4>
    <form asp-action="AddComment" method="post">
        <input type="hidden" name="DiscussionId" value="@Model.DiscussionId" />
        <div class="form-group">
            <textarea name="Content" class="form-control" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Post Comment</button>
    </form>
</div>

<!-- Navigation Links -->
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.DiscussionId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>