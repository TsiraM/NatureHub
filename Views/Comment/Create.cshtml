@model NatureHub.Models.Comment

@* Page title *@
<h2>Add New Comment</h2>

@* Comment submission form *@
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="DiscussionId" value="@ViewBag.DiscussionId" />

    @* Comment content textarea *@
    <div class="form-group mb-3">
        <label asp-for="Content">Comment</label>
        <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
    </div>

    @* Form submission buttons *@
    <div class="form-group">
        <input type="submit" value="Post Comment" class="btn btn-primary" />
        <a asp-controller="Discussion" asp-action="Details" asp-route-id="@ViewBag.DiscussionId" class="btn btn-secondary">Back to Discussion</a>
    </div>
</form>